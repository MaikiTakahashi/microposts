<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>

        <span><%= gravatar_for @user %></span>
        <span><%= @user.name %></span>
        <span><%= @user.live %></span>
        <span><%= @user.introduction %></span>
        <span><%= link_to "フォロワー一覧", followers_user_path(@user) %></span>
        <span><%= link_to "フォロー一覧", followings_user_path(@user) %></span>
          
      </h1>
    </section>
  </aside>    

  <div class="col-md-8">

<%= render 'follow_form' if logged_in? %>
      
<% if @user.microposts.any? %>

      <h3>Microposts( <%= @user.microposts.count %> )</h3>
      
        <ol class="microposts">
            
<%= render @microposts %>            
            
        </ol>

<% end %>

  </div>
</div>

