<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  
  <div class="col-md-8">
    <% if @users.any? %>
      <%= @users.each do |user| %>
        <ul class="users_follow">
          <li>
            <%= gravatar_for user, size:50 %>
            <%= user.name %>
          </li>
        </ul>
      <% end %>
    <% end %>    
  </div>
</div>


list-style: none;
  padding: 0;
  li {
    padding: 10px 0;
    border-top: 1px solid #e8e8e8;
  }